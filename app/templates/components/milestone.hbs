<section class="c-milestone__content">
  <header class="header">
    <HeaderLogo @logoUrl={{@model.metadata.logotype}} @alt={{@model.metadata.name}} />
  </header>

  <span class="c-milestone__content__text">
    100
  </span>
</section>

<footer class="c-milestone__footer">
  <div class="c-milestone__footer__content">
    <h1>Teamtailor</h1>
    <p>100 hires</p>
  </div>

  <BasicDropdown @renderInPlace="true" @verticalPosition="above" as |dd|>
    <dd.Trigger class="header__share">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        fill-rule="evenodd"
        clip-rule="evenodd"
      >
        <path d="M16 2v7h-2v-5h-12v16h12v-5h2v7h-16v-20h16zm2 9v-4l6 5-6 5v-4h-10v-2h10z"></path>
      </svg>
    </dd.Trigger>
    <dd.Content>
      {{#fb-share-button}}Facebook{{/fb-share-button}}
      {{#linkedin-share-button}}Linkedin{{/linkedin-share-button}}
    </dd.Content>
  </BasicDropdown>
</footer>
